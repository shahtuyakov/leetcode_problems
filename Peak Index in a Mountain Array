/**
 * @param {number[]} arr
 * @return {number}
 */
var peakIndexInMountainArray = function(arr) {
    let s = 0;
    let e = arr.length - 1;
    let mid;
    
    while (s < e){
        mid = (s + e) / 2;
        if (arr[mid] < arr[mid + 1]) s = mid + 1;
        else {
            e = mid;
        }
    }
    return s;
};
