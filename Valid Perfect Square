/**
 * @param {number} num
 * @return {boolean}
 */
var isPerfectSquare = function(num) {
    if (num < 1) return false;
    if (num === 1) return true;
    
    let left = 1;
    let rigth = num;
    
    while (left <= rigth){
        let mid = (left + rigth) / 2 << 0;
        if (mid * mid === num) return true;
        else if (mid * mid > num) rigth = mid - 1;
        else if (mid * mid < num) left = mid + 1;
    }
    return false;
};
